<% if (success_msg && success_msg.length > 0) { %>
  <div class="alert alert-success" role="alert">
    <%= success_msg %>
  </div>
<% } %>

<% if (error_msg && error_msg.length > 0) { %>
  <div class="alert alert-danger" role="alert">
    <%= error_msg %>
  </div>
<% } %>

<% if (info_msg && info_msg.length > 0) { %>
  <div class="alert alert-info" role="alert">
    <%= info_msg %>
  </div>
<% } %>

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fw-bold">KPI Details</h5>
            </div>
            <div class="card-body p-4 p-md-5">
                <div class="row">
                    <div class="col-md-6">
                        <h4><%= kpi.title %></h4>
                        <p class="text-muted"><%= kpi.description %></p>
                        
                        <div class="mb-3">
                            <strong>Target:</strong> <%= kpi.target %> <%= kpi.unit %>
                        </div>
                        <div class="mb-3">
                            <strong>Current Value:</strong> <%= kpi.currentValue %> <%= kpi.unit %>
                        </div>
                        <div class="mb-3">
                            <strong>Progress:</strong>
                            <div class="progress">
                                <div class="progress-bar" role="progressbar"
                                    style="width: <%= kpi.progress %>%;"
                                    aria-valuenow="<%= kpi.progress %>"
                                    aria-valuemin="0"
                                    aria-valuemax="100">
                                    <%= kpi.progress %>%
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <strong>Status:</strong>
                            <span class="badge bg-<%= kpi.status === 'completed' ? 'success' :
                                          kpi.status === 'in-progress' ? 'primary' :
                                          kpi.status === 'overdue' ? 'danger' : 'secondary' %> rounded-pill py-2 px-3">
                                <%= kpi.status %>
                            </span>
                        </div>
                        <div class="mb-3">
                            <strong>Start Date:</strong> <%= new Date(kpi.startDate).toLocaleDateString() %>
                        </div>
                        <div class="mb-3">
                            <strong>Due Date:</strong> <%= new Date(kpi.endDate).toLocaleDateString() %>
                        </div>
                        <div class="mb-3">
                            <strong>Measurement Frequency:</strong> <%= kpi.measurementFrequency %>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-white py-3">
                                <h5 class="mb-0 fw-bold">Update Progress</h5>
                            </div>
                            <div class="card-body p-4">
                                <form action="/staff/kpi/<%= kpi._id %>/update" method="POST">
                                    <div class="mb-3">
                                        <label for="currentValue" class="form-label">Current Value</label>
                                        <input type="number" class="form-control form-control-lg" id="currentValue" name="currentValue"
                                            value="<%= kpi.currentValue %>" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="comment" class="form-label">Comment</label>
                                        <textarea class="form-control form-control-lg" id="comment" name="comment" rows="3"></textarea>
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-lg rounded-pill px-4">Update Progress</button>
                                </form>
                            </div>
                        </div>

                        <div class="card border-0 shadow-sm mt-4">
                            <div class="card-header bg-white py-3">
                                <h5 class="mb-0 fw-bold">Upload Evidence</h5>
                            </div>
                            <div class="card-body p-4">
                                <form action="/staff/kpi/<%= kpi._id %>/upload-evidence" method="POST" enctype="multipart/form-data">
                                    <div class="mb-3">
                                        <label for="kpiEvidence" class="form-label">Select File</label>
                                        <input type="file" class="form-control form-control-lg" id="kpiEvidence" name="kpiEvidence" required>
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-lg rounded-pill px-4">Upload Evidence</button>
                                </form>
                            </div>
                        </div>

                        <div class="card border-0 shadow-sm mt-4">
                            <div class="card-header bg-white py-3">
                                <h5 class="mb-0 fw-bold">Comments</h5>
                            </div>
                            <div class="card-body p-4">
                                <div class="mb-4">
                                    <form action="/staff/kpi/<%= kpi._id %>/comment" method="POST">
                                        <div class="mb-3">
                                            <label for="newComment" class="form-label">Add Comment</label>
                                            <textarea class="form-control form-control-lg" id="newComment" name="comment" rows="2" required></textarea>
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-lg rounded-pill px-4">Add Comment</button>
                                    </form>
                                </div>

                                <div class="comments-list">
                                    <% kpi.comments.forEach(comment => { %>
                                        <div class="card mb-2 border-0 shadow-sm">
                                            <div class="card-body p-3">
                                                <p class="card-text mb-1"><strong><%= comment.user.name || 'Anonymous' %>:</strong> <%= comment.text %></p>
                                                <small class="text-muted d-block text-end">
                                                    <%= new Date(comment.createdAt).toLocaleString() %>
                                                </small>
                                            </div>
                                        </div>
                                    <% }); %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<% // Historical Data Table %>
<div class="row mt-4">
    <div class="col-md-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fw-bold">Historical Data</h5>
            </div>
            <div class="card-body p-0">
                <% if (kpi.historicalData && kpi.historicalData.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th scope="col">Date</th>
                                    <th scope="col">Value</th>
                                    <th scope="col">Target</th>
                                    <th scope="col">Variance</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Notes</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% kpi.historicalData.sort((a, b) => new Date(b.date) - new Date(a.date)).forEach(dataPoint => { %>
                                    <tr class="align-middle">
                                        <td><%= new Date(dataPoint.date).toLocaleDateString() %></td>
                                        <td><%= dataPoint.value %></td>
                                        <td><%= dataPoint.target %></td>
                                        <% const variance = dataPoint.value - dataPoint.target; %>
                                        <td class="<%= variance >= 0 ? 'text-success' : 'text-danger' %>">
                                            <%= variance >= 0 ? '+' : '' %><%= variance.toFixed(2) %>
                                        </td>
                                        <td>
                                            <span class="badge bg-<%= dataPoint.status === 'completed' ? 'success' :
                                                          dataPoint.status === 'in-progress' ? 'primary' :
                                                          dataPoint.status === 'overdue' ? 'danger' : 'secondary' %> rounded-pill py-2 px-3">
                                                <%= dataPoint.status %>
                                            </span>
                                        </td>
                                        <td><%= dataPoint.notes || 'N/A' %></td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <p class="px-4 py-3">No historical data available for this KPI.</p>
                <% } %>
            </div>
        </div>
    </div>
</div> 