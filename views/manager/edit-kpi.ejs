<div class="row mb-4">
    <div class="col-md-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fw-bold">Edit KPI</h5>
            </div>
            <div class="card-body p-4 p-md-5">
                <form action="/manager/kpi/<%= kpi._id %>/edit" method="POST">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" class="form-control form-control-lg" id="title" name="title" value="<%= kpi.title %>" required>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control form-control-lg" id="description" name="description" rows="3" required><%= kpi.description %></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="category" class="form-label">Category</label>
                        <select class="form-select form-select-lg" id="category" name="category" required>
                            <option value="">Select Category</option>
                            <% categories.forEach(category => {
                                const isSelected = kpi.category && kpi.category._id && kpi.category._id.toString() === category._id.toString();
                            %> <option value="<%= category._id %>" <%= isSelected ? 'selected' : '' %>> <%= category.name %> </option> <% }); %>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="assignedTo" class="form-label">Assign To</label>
                        <select class="form-select form-select-lg" id="assignedTo" name="staffId" required>
                            <option value="">Select Staff</option>
                            <% staff.forEach(member => {
                                const isSelected = kpi.staff && kpi.staff._id && kpi.staff._id.toString() === member._id.toString();
                            %> <option value="<%= member._id %>" <%= isSelected ? 'selected' : '' %>> <%= member.name %> (<%= member.organization %>) </option> <% }); %>
                        </select>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="startDate" class="form-label">Start Date</label>
                                <input type="date" class="form-control form-control-lg" id="startDate" name="startDate" 
                                       value="<%= new Date(kpi.startDate).toISOString().split('T')[0] %>" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="endDate" class="form-label">End Date</label>
                                <input type="date" class="form-control form-control-lg" id="endDate" name="endDate" 
                                       value="<%= new Date(kpi.endDate).toISOString().split('T')[0] %>" required>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="measurementFrequency" class="form-label">Measurement Frequency</label>
                        <select class="form-select form-select-lg" id="measurementFrequency" name="measurementFrequency" required>
                            <option value="">Select Frequency</option>
                            <% ['Daily', 'Weekly', 'Monthly', 'Quarterly', 'Yearly'].forEach(freq => { %>
                                <option value="<%= freq %>" <%= kpi.measurementFrequency === freq ? 'selected' : '' %>><%= freq %></option>
                            <% }); %>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="target" class="form-label">Target Value</label>
                        <input type="number" class="form-control form-control-lg" id="target" name="target" value="<%= kpi.target %>" required>
                    </div>

                    <div class="mb-3">
                        <label for="unit" class="form-label">Unit of Measurement</label>
                        <input type="text" class="form-control form-control-lg" id="unit" name="unit" value="<%= kpi.unit %>" required>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary btn-lg rounded-pill px-4">Update KPI</button>
                        <a href="/manager/dashboard" class="btn btn-secondary btn-lg rounded-pill px-4">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
document.querySelector('form').addEventListener('submit', function(e) {
    const startDate = new Date(document.getElementById('startDate').value);
    const endDate = new Date(document.getElementById('endDate').value);
    
    if (endDate <= startDate) {
        e.preventDefault();
        const errorMessage = document.createElement('div');
        errorMessage.className = 'alert alert-danger alert-dismissible fade show mt-3';
        errorMessage.setAttribute('role', 'alert');
        errorMessage.innerHTML = 'End date must be after start date<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>';
        
        const form = document.querySelector('form');
        form.parentNode.insertBefore(errorMessage, form);
        
        setTimeout(() => {
            errorMessage.remove();
        }, 5000); // Remove after 5 seconds
    }
});
</script> 