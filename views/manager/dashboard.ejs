<div class="row mb-4">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100 animated-card">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div>
                    <h5 class="card-title text-muted text-uppercase fw-bold">Total KPIs</h5>
                    <h2 class="display-4 fw-bold text-primary"><%= stats.totalKPIs %></h2>
                </div>
                <i class="fas fa-boxes fa-3x text-primary-light"></i>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100 animated-card">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div>
                    <h5 class="card-title text-muted text-uppercase fw-bold">Active KPIs</h5>
                    <h2 class="display-4 fw-bold text-success"><%= stats.activeKPIs %></h2>
                </div>
                <i class="fas fa-tasks fa-3x text-success-light"></i>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100 animated-card">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div>
                    <h5 class="card-title text-muted text-uppercase fw-bold">Completed KPIs</h5>
                    <h2 class="display-4 fw-bold text-info"><%= stats.completedKPIs %></h2>
                </div>
                <i class="fas fa-check-circle fa-3x text-info-light"></i>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fw-bold">Recent KPIs</h5>
                <a href="/manager/kpi/create" class="btn btn-primary btn-md rounded-pill px-4"><i class="fas fa-plus-circle me-2"></i>Create New KPI</a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th scope="col">Title</th>
                                <th scope="col">Assigned To</th>
                                <th scope="col">Start Date</th>
                                <th scope="col">End Date</th>
                                <th scope="col">Status</th>
                                <th scope="col">Progress</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% kpis.forEach(kpi => { %>
                                <tr class="align-middle">
                                    <td><a href="/manager/kpi/<%= kpi._id %>" class="text-decoration-none fw-medium"><%= kpi.title %></a></td>
                                    <td><%= kpi.staff ? kpi.staff.name : 'N/A' %></td>
                                    <td><%= new Date(kpi.startDate).toLocaleDateString() %></td>
                                    <td><%= new Date(kpi.endDate).toLocaleDateString() %></td>
                                    <td>
                                        <span class="badge rounded-pill bg-<%= kpi.status === 'completed' ? 'success' : 
                                            kpi.status === 'in_progress' ? 'primary' : 'warning' %> py-2 px-3">
                                            <%= kpi.status.replace('_', ' ') %>
                                        </span>
                                    </td>
                                    <td>
                                        <div class="progress">
                                            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" 
                                                style="width: <%= kpi.progress %>%;" 
                                                aria-valuenow="<%= kpi.progress %>" 
                                                aria-valuemin="0" 
                                                aria-valuemax="100">
                                                <%= kpi.progress %>%
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            <a href="/manager/kpi/<%= kpi._id %>" class="btn btn-outline-info btn-sm rounded-pill"><i class="fas fa-eye"></i> View</a>
                                            <a href="/manager/kpi/<%= kpi._id %>/edit" class="btn btn-outline-warning btn-sm rounded-pill"><i class="fas fa-edit"></i> Edit</a>
                                            <button class="btn btn-outline-danger btn-sm rounded-pill" 
                                                    onclick="deleteKpi('<%= kpi._id %>')"><i class="fas fa-trash-alt"></i> Delete</button>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card border-0 shadow-sm h-100 animated-card">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div>
                    <h5 class="card-title text-muted text-uppercase fw-bold">Total Staff</h5>
                    <h2 class="display-4 fw-bold text-dark"><%= stats.totalStaff %></h2>
                </div>
                <i class="fas fa-users fa-3x text-secondary-light"></i>
            </div>
        </div>
    </div>
</div>

<script>
function deleteKpi(kpiId) {
    if (confirm('Are you sure you want to delete this KPI?')) {
        fetch(`/manager/kpi/${kpiId}`, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                window.location.reload();
            } else {
                alert('Error deleting KPI');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Error deleting KPI');
        });
    }
}
</script> 