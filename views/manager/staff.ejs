<div class="row mb-4">
    <div class="col-md-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fw-bold">Staff Members</h5>
                <a href="/manager/staff/create" class="btn btn-primary btn-md rounded-pill px-4"><i class="fas fa-plus-circle me-2"></i>Add New Staff</a>
            </div>
            <div class="card-body p-0">

                <% // Search and Filter Form %>
                <form action="/manager/staff" method="GET" class="mb-4">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <input type="text" class="form-control form-control-lg" name="search" placeholder="Search by staff name" value="<%= currentSearch %>">
                        </div>
                        <div class="col-md-4">
                            <select class="form-select form-select-lg" name="department">
                                <option value="">All Departments</option>
                                <% departments.forEach(department => { %>
                                    <option value="<%= department.name %>" <%= currentDepartment === department.name ? 'selected' : '' %>><%= department.name %></option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary btn-lg w-100 rounded-pill">Filter</button>
                        </div>
                    </div>
                </form>

                <% // Staff Table %>
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Organization</th>
                                <th scope="col">Department</th>
                                <th scope="col">Role</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% staff.forEach(member => { %>
                                <tr class="align-middle">
                                    <td><%= member.name %></td>
                                    <td><%= member.email %></td>
                                    <td><%= member.organization %></td>
                                    <td><%= member.department %></td>
                                    <td>
                                        <span class="badge bg-secondary rounded-pill py-2 px-3">
                                            <%= member.role %>
                                        </span>
                                    </td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            <a href="/manager/staff/<%= member._id %>/edit" class="btn btn-outline-warning btn-sm rounded-pill"><i class="fas fa-edit"></i> Edit</a>
                                            <button type="button" class="btn btn-outline-danger btn-sm rounded-pill delete-staff-btn" 
                                                    data-id="<%= member._id %>" 
                                                    title="Delete this staff member">
                                                <i class="fas fa-trash-alt"></i> Delete
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    console.log('DOM fully loaded and parsed');

    // Function to handle the actual deletion logic
    function deleteStaff(staffId) {
        if (confirm('Are you sure you want to delete this staff member?')) {
            fetch(`/manager/staff/${staffId}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    window.location.reload(); // Reload on success
                } else {
                    alert(data.message || 'Error deleting staff member');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error deleting staff member. Please try again.');
            });
        }
    }

    // Find all delete buttons and attach click event listeners
    const deleteButtons = document.querySelectorAll('.delete-staff-btn');
    console.log(`Found ${deleteButtons.length} delete buttons.`);

    deleteButtons.forEach(button => {
        console.log('Attaching listener to a delete button.');
        button.addEventListener('click', function() {
            console.log('Delete button clicked');
            const staffId = this.getAttribute('data-id');
            deleteStaff(staffId);
        });
    });

}); // End of DOMContentLoaded listener
</script> 